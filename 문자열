======================================================
#4번 문제
======================================================
#include <stdio.h>

int main()
{
    int number;
    scanf("%d",&number);
    for (int i = 0 ; i < number ; i ++)
    {
        int num;
        char string[20];
        scanf("%d %s",&num,string);
        for (int i =0; string[i]!='\0';i++)
        {
            for (int l = 0 ; l < num ; l ++)
            {
                printf("%c",string[i]);
            }
        }
        printf("\n");
    }
}
